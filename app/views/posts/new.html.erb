<div class = "header-bar row align-items-center">
	<h1 class = "my-3 mx-auto"><a href = <%=root_path %>>Vibeygrammmm</a></h1>
	<p class = "position-absolute ml-5"><%= link_to 'New Post', new_post_path %></p>
</div>

 <div class = "  d-flex flex-column text-center my-5">
<h2 class = "mb-4"> New Post </h2>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>

  <p>
	<%= form.label :Username %><br>
	<%= form.text_field :author_name %>
  </p>

  <p>
	<%= form.label :title %><br>
	<%= form.text_field :title %>
  </p>

  <p>
	<%= form.label :"Photo link" %><br>
	<%= form.text_field :photo_url %>
  </p>

  <p>
	<%= form.label :caption %><br>
	<%= form.text_area :caption %>
  </p>

  <p>
	<button type = "submit" class="btn btn-primary" >Post</button>
  </p>
<% end %>

</div>